<?xml version="1.0" encoding="UTF-8"?>
<web-app id="hello-world-webapp" version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <display-name>WACAR</display-name>
    <description>WebApp description </description>
    <welcome-file-list>
        <welcome-file>html/home.html</welcome-file>
    </welcome-file-list>
    <session-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>it.unipd.dei.webapp.wacar.filter.LoginFilter</filter-class>
    </filter>
    <!-- Pages that need user to be logged -->
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/order/</url-pattern>
        <url-pattern>/user/reservations/</url-pattern>
        <url-pattern>/user/</url-pattern>
        <url-pattern>/altro</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>it.unipd.dei.webapp.wacar.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>Connection pool to the database</description>
        <res-ref-name>jdbc/WaCar</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>